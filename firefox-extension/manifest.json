{
  "manifest_version": 2,
  "name": "PursuitPal Job Tracker",
  "version": "1.0.0",
  "description": "Extract job details from job boards and sync with your PursuitPal account",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "contextMenus",
    "notifications",
    "<all_urls>",
    "https://api.pursuitpal.app/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "commands": {
    "extract-job": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Extract and save current job"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "extractors/*",
    "utils/*",
    "content/*",
    "images/*"
  ],
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "options_ui": {
    "page": "option.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "amoldeshmukh683@gmail.com",
      "strict_min_version": "57.0"
    }
  }
}
